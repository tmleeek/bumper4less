<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Amasty_Blog::maintext" title="Amasty Blog" />
                    <resource id="Amasty_Blog::tags" title="Amasty Blog Tags Page" />
                    <resource id="Amasty_Blog::posts" title="Amasty Blog Posts Page" />
                    <resource id="Amasty_Blog::comments" title="Amasty Blog Comments Page" />
                    <resource id="Amasty_Blog::categories" title="Amasty Blog Categories Page" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Amasty_Blog::config" title="Amasty Blog Settings" sortOrder="21215" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>