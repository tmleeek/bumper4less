<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Amasty_Smtp::config" title="Amasty SMTP Email Settings" sortOrder="11319" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Reports::report">
                    <resource id="Amasty_Smtp::reports" title="SMTP Email Settings">
                        <resource id="Amasty_Smtp::reports_sent" title="Sent Emails Log" sortOrder="10"/>
                        <resource id="Amasty_Smtp::reports_debug" title="Debug Log" sortOrder="20"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
