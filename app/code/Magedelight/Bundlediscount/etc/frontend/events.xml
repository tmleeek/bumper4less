<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:noNamespaceSchemaLocation='urn:magento:framework:Event/etc/events.xsd'>
	<event name="page_block_html_topmenu_gethtml_before">
        <observer name="bundlediscount_observer" instance="Magedelight\Bundlediscount\Observer\TopMenu" />
    </event>

	<event name='bundlediscount_bundle_add_ids'>
		<observer
			name='saveBundleIds'
			instance='Magedelight\Bundlediscount\Observer\SaveBundleIds'
		/>
	</event>
	<event name='sales_quote_save_before'>
		<observer
			name='validateBundleIds'
			instance='Magedelight\Bundlediscount\Observer\ValidateBundleIds'
		/>
	</event>
	<event name='sales_quote_address_collect_totals_after'>
		<observer
			name='addDiscount'
			instance='Magedelight\Bundlediscount\Observer\AddDiscount'
		/>
	</event> 
	
</config>